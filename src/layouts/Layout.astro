---
import Footer from "../components/Footer.astro";
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="stylesheet" href="/fonts/LineSeed/font.css" id="font">
		<title>{title}</title>
	</head>
	<body>
		<slot />
		<Footer title={title} />
		<script src="../js/main.js" type="text/script"></script>
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: "line_seed", sans-serif;
	}
	body{
		font-family: "line_seed", sans-serif;
		font-weight: 400;
		font-size: 16px;
		line-height: 1.5;

	}
	h1,h2,h3,h4,h5,h6{
		font-family: "line_seed", sans-serif;
		font-weight: 600;
	}
	h1 {
		font-size: 2.5rem;
	}
	h2 {
		font-size: 2rem;
	}
	h3 {
		font-size: 1.75rem;
	}
	h4 {
		font-size: 1.5rem;
	}
	h5 {
		font-size: 1.25rem;
	}
	h6 {
		font-size: 1rem;
	}
	a {
		color: rgb(var(--accent));
		text-decoration: none;
	}
</style>
