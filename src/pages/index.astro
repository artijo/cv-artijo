---
import Layout from '../layouts/Layout.astro';
---

<Layout title="ARTIJO">
	<main class="container m-auto soon">
		<h1>Hello</h1>
		<h4>coming soon.</h4>
		<a href="https://blog.artijo.com" class="mt-4 inline-flex items-center justify-center p-5 text-base font-medium text-gray-500 rounded-lg bg-gray-50 hover:text-gray-900 hover:bg-gray-100 dark:text-gray-400 dark:bg-gray-800 dark:hover:bg-gray-700 dark:hover:text-white">
			<span class="w-full">Read my blog.</span>
			<svg class="w-4 h-4 ms-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
				<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
			</svg>
		</a>
	</main>
</Layout>

<style lang="scss">
	.soon {
		height: 100dvh;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		text-align: center;
	}
</style>
